
    

<p>
    <h2><%= @sensor.name %></h2>
</p>

<div class="row">
    <div class="col-md-2 pull-left center">
        <div class="thermostat_gallery">&nbsp<%= number_with_precision(@sensor.max_temperature,:precision => 1)  %>
        <br>
        <font size="2"><%= @sensor.property_value %></font>
        </div>
        
        
        
        
    </div>
    <div class="col-md-4">
        <h4>Sensor settings</h4>
        <div class="well">
            <p> Name: <%= @sensor.name %></p>
            <p> Temperature: <%= @sensor.property_value %></p>
            <p> Max Temperature: <%= number_with_precision(@sensor.max_temperature,:precision => 1) %></p>
            <p> Interval: <%= @sensor.interval %></p>
            <p> Namespace: <%= @sensor.namespace %></p>
            <p> MQTT username: <%= @sensor.mqtt_user %></p>
            <p> MQTT password: <%= @sensor.mqtt_password %></p>
            <p> IFTTT Trigger URL: <%= @sensor.ifttt %></p>
           
        </div>
    </div> 
    
    <div class="col-md-4">
        <h4>Sensor triggers</h4>
        <div class="well">
            <% @triggers.each do |trigger| %>
                <p> Name: <%= trigger.name %></p>
                <p> Value: <%= trigger.value %></p>
                <p> Webhook URL: <%= trigger.webhook_url %></p>
            <% end %>
        </div>
    </div>
    
    
    
    
    
</div>
<div class="row">
    <div class="col-md-2"></div>
    <div class="col-sm-2 text-left pull-left">
                <%= link_to '', new_trigger_path(:sensor => @sensor), class: "glyphicon glyphicon-flash" %>
                &nbsp;&nbsp;
                <%= link_to '', edit_sensor_path(@sensor), class: "glyphicon glyphicon-wrench" %>
                &nbsp;&nbsp;
                <%= link_to "",  @sensor, class: "glyphicon glyphicon-trash", method: :delete,data: { confirm: "You sure?" } %>
    </div>
 </div> 
 
 <hr>
        
<div class="row">
     <div class="col-md-2 pull-left center">
       
    </div>
    <div class="col-md-8">
        <iframe src= <%= @shiftrsrc %>
            width="600" 
            height="400" 
            frameborder="0" 
            webkitallowfullscreen 
            mozallowfullscreen 
            allowfullscreen
        </iframe>
    </div>
</div>
