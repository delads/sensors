<div class="row">

  <div class="col-md-8 offset-md-2">
    <!-- START panel-->
    <div class="panel panel-default">
    <%= render 'shared/errors', obj: @sensor %>

        <div class="panel-heading">Add a new Thing</div>
        <div class="panel-body">
           <div class="form-horizontal"> 

            <%= form_for(@sensor, html: { multipart: true }) do |s| %>

                <div class="form-group">
                  <%= s.label :name, class: "col-lg-2 control-label" %>
                  <div class="col-lg-10">
                    <%= s.text_field :name, class: "form-control" %>
                  </div>
                </div>

              
                <div class="form-group">
                  <%= s.label :sensor_type, class: "col-lg-2 control-label" %>             
                    <div class="col-lg-10">
                      <%= s.select :sensor_type, 
                          [ 'Temperature', 
                            'Quality', 
                            'Humidity', 
                            'Pressure', 
                            'Soil Moisture', 
                            'UV Index', 
                            'Rainfall', 
                            'Windspeed', 
                            'Elevation' ] %>
                    </div>
                </div>
            

                <div class="form-group">
                  <%= s.label :namespace, class: "col-lg-2 control-label" %>
                  <div class="col-lg-10">
                    <%= s.text_field :namespace, class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <%= s.label :mqtt_token, class: "col-lg-2 control-label" %>
                  <div class="col-lg-10">
                    <%= s.text_field :mqtt_token, class: "form-control" %>
                  </div>
                </div>

                <div class="form-group">
                  <%= s.label :mqtt_topic, class: "col-lg-2 control-label" %>
                  <div class="col-lg-10">
                    <%= s.text_field :mqtt_topic, class: "form-control" %>
                  </div>
                </div>

              <div class="form-group">
                <div class="col-lg-offset-2 col-lg-10">
                  <%= s.submit(@sensor.new_record? ? 'Create Sensor' : 'Edit Sensor', class: "btn btn-sm btn-default") %>
                </div>
              </div>
            <% end %>  <!-- end of form>  -->
          </div> <!-- end of <div class="form-horizontal"> -->
    </div>  <!-- end of <div class="panel-body"> -->
    </div>  <!-- end of <div class="panel panel-default"> -->
    <!-- END panel-->
  </div>  <!-- end of <div class="col-md-8 offset-md-2"> -->
</div> <!-- end of <div class="row"> -->
